image.png@model HealthWeb.Controllers.SettingsViewModel
@{
    ViewData["Title"] = "Cài đặt - HealthWeb";
}

<div class="container" style="max-width: 800px; margin: 2rem auto; padding: 0 1rem;">
    <div class="settings-card" style="background: rgba(15, 23, 42, 0.8); border-radius: 16px; padding: 2rem; border: 1px solid rgba(255, 255, 255, 0.1);">
        <div class="settings-header" style="margin-bottom: 2rem;">
            <h1 style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem; display: flex; align-items: center; gap: 0.75rem;">
                <i class="fas fa-cog" style="color: #4ade80;"></i>
                Cài đặt
            </h1>
            <p style="color: #94a3b8; font-size: 0.95rem;">Tùy chỉnh trải nghiệm của bạn</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="background-color: rgba(16, 185, 129, 0.2); color: #10b981; padding: 12px 16px; border-radius: 8px; margin-bottom: 20px; border: 1px solid rgba(16, 185, 129, 0.3);">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" style="background-color: rgba(239, 68, 68, 0.2); color: #ef4444; padding: 12px 16px; border-radius: 8px; margin-bottom: 20px; border: 1px solid rgba(239, 68, 68, 0.3);">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="Index" asp-controller="Settings">
            @Html.AntiForgeryToken()

            <!-- Thông báo -->
            <div class="settings-section" style="margin-bottom: 2rem; padding-bottom: 2rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; display: flex; align-items: center; gap: 0.5rem; color: #e2e8f0;">
                    <i class="fas fa-bell"></i>
                    Thông báo
                </h2>
                <div class="setting-item" style="display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: rgba(30, 41, 59, 0.5); border-radius: 12px;">
                    <div>
                        <label style="font-weight: 600; color: #e2e8f0; cursor: pointer;">Cho phép thông báo</label>
                        <p style="font-size: 0.85rem; color: #94a3b8; margin-top: 0.25rem;">Nhận thông báo về mục tiêu, nhắc nhở và cập nhật</p>
                    </div>
                    <label class="toggle-switch" style="position: relative; display: inline-block; width: 50px; height: 26px;">
                        <input type="checkbox" name="EnableNotifications" value="true" @(Model.EnableNotifications ? "checked" : "") style="opacity: 0; width: 0; height: 0;">
                        <span class="slider" style="position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(148, 163, 184, 0.3); transition: 0.3s; border-radius: 26px;"></span>
                    </label>
                </div>
            </div>

            <!-- Giao diện -->
            <div class="settings-section" style="margin-bottom: 2rem; padding-bottom: 2rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; display: flex; align-items: center; gap: 0.5rem; color: #e2e8f0;">
                    <i class="fas fa-palette"></i>
                    Giao diện
                </h2>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label for="Theme" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #e2e8f0;">
                        Chủ đề
                    </label>
                    <div class="input-wrapper" style="position: relative;">
                        <i class="fas fa-moon" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: #94a3b8; z-index: 2;"></i>
                        <select id="Theme" name="Theme"
                                style="width: 100%; padding: 0.75rem 1rem 0.75rem 3rem; border: 2px solid rgba(148, 163, 184, 0.3); border-radius: 12px; background: rgba(30, 41, 59, 0.8); color: #fff; font-size: 1rem; outline: none; appearance: none; cursor: pointer;">
                            <option value="Dark" selected="@(Model.Theme == "Dark")">Tối</option>
                            <option value="Light" selected="@(Model.Theme == "Light")">Sáng</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Language" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #e2e8f0;">
                        Ngôn ngữ
                    </label>
                    <div class="input-wrapper" style="position: relative;">
                        <i class="fas fa-language" style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: #94a3b8; z-index: 2;"></i>
                        <select id="Language" name="Language"
                                style="width: 100%; padding: 0.75rem 1rem 0.75rem 3rem; border: 2px solid rgba(148, 163, 184, 0.3); border-radius: 12px; background: rgba(30, 41, 59, 0.8); color: #fff; font-size: 1rem; outline: none; appearance: none; cursor: pointer;">
                            <option value="vi" selected="@(Model.Language == "vi")">Tiếng Việt</option>
                            <option value="en" selected="@(Model.Language == "en")">English</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Phản hồi -->
            <div class="settings-section" style="margin-bottom: 2rem;">
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; display: flex; align-items: center; gap: 0.5rem; color: #e2e8f0;">
                    <i class="fas fa-comment-dots"></i>
                    Phản hồi
                </h2>
                <form method="post" asp-action="SendFeedback" asp-controller="Settings" style="margin-top: 1rem;">
                    @Html.AntiForgeryToken()
                    <div class="form-group" style="margin-bottom: 1rem;">
                        <label for="feedback" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #e2e8f0;">
                            Gửi phản hồi của bạn
                        </label>
                        <textarea id="feedback" name="feedback" rows="4" 
                                  placeholder="Chia sẻ ý kiến, đề xuất hoặc báo lỗi..."
                                  style="width: 100%; padding: 0.75rem 1rem; border: 2px solid rgba(148, 163, 184, 0.3); border-radius: 12px; background: rgba(30, 41, 59, 0.8); color: #fff; font-size: 1rem; outline: none; resize: vertical; font-family: inherit;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary" style="padding: 0.75rem 1.5rem; background: rgba(78, 222, 128, 0.1); color: #4ade80; border: 2px solid rgba(78, 222, 128, 0.3); border-radius: 12px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                        <i class="fas fa-paper-plane"></i> Gửi phản hồi
                    </button>
                </form>
            </div>

            <!-- Lưu cài đặt -->
            <div class="form-actions" style="display: flex; gap: 1rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid rgba(255, 255, 255, 0.1);">
                <button type="submit" class="btn btn-primary" style="flex: 1; padding: 0.75rem 1.5rem; background: #4ade80; color: #0f172a; border: none; border-radius: 12px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                    <i class="fas fa-save"></i>
                    <span>Lưu cài đặt</span>
                </button>
                <a href="/" class="btn btn-secondary" style="padding: 0.75rem 1.5rem; background: transparent; color: #94a3b8; border: 2px solid rgba(148, 163, 184, 0.3); border-radius: 12px; font-weight: 600; text-decoration: none; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center;">
                    <span>Hủy</span>
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body.light-mode .settings-card {
        background: rgba(255, 255, 255, 0.9);
        border-color: rgba(0, 0, 0, 0.1);
    }

    body.light-mode .settings-header h1,
    body.light-mode .settings-section h2 {
        color: #0f172a;
    }

    body.light-mode .settings-header p,
    body.light-mode .setting-item p {
        color: #64748b;
    }

    body.light-mode .setting-item {
        background: rgba(0, 0, 0, 0.05);
    }

    body.light-mode .setting-item label {
        color: #0f172a;
    }

    .toggle-switch input:checked + .slider {
        background-color: #4ade80;
    }

    .toggle-switch input:checked + .slider:before {
        transform: translateX(24px);
    }

    .toggle-switch .slider:before {
        position: absolute;
        content: "";
        height: 20px;
        width: 20px;
        left: 3px;
        bottom: 3px;
        background-color: white;
        transition: 0.3s;
        border-radius: 50%;
    }

    body.light-mode .toggle-switch input:checked + .slider {
        background-color: #ea580c;
    }

    .input-wrapper select:focus,
    textarea:focus {
        border-color: #4ade80;
        box-shadow: 0 0 20px rgba(78, 222, 128, 0.3);
    }

    body.light-mode .input-wrapper select,
    body.light-mode textarea {
        background: rgba(0, 0, 0, 0.05);
        color: #0f172a;
        border-color: rgba(0, 0, 0, 0.1);
    }

    body.light-mode .input-wrapper select:focus,
    body.light-mode textarea:focus {
        border-color: #ea580c;
        box-shadow: 0 0 20px rgba(234, 88, 12, 0.3);
    }

    body.light-mode .btn-primary {
        background: #ea580c;
        color: #ffffff;
    }

    body.light-mode .btn-secondary {
        color: #0f172a;
        border-color: rgba(0, 0, 0, 0.2);
    }

    body.light-mode .settings-section {
        border-color: rgba(0, 0, 0, 0.1);
    }
</style>

