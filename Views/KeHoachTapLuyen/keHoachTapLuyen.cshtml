@{
    Layout = "_Layout";
    ViewData["Title"] = "Kế hoạch tập luyện";
}

@section Styles {
    <link rel="stylesheet" href="~/css/keHoachTapLuyen.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/keHoachTapLuyen.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lottie-web@5.12.2/build/player/lottie.min.js"></script>
}

<div id="app" class="khtl">
    <!-- View 1: Lịch luyện tập + danh sách bài tập -->
    <section id="view-schedule" class="view active">
        <header class="page-header">
            <button id="backHidden" class="icon-btn" aria-label="back" disabled>◀</button>
            <h1>Lịch Luyện Tập Của Bạn</h1>
            <p class="sub">Giúp bạn có thể quan sát và hỗ trợ bạn trong quá trình luyện tập của bản thân</p>
        </header>

        <div class="grid-2">
            <div class="card">
                <h3><span class="title-icon" aria-hidden="true">📅</span> Lịch Luyện Tập</h3>
                <div class="tabs" id="rangeTabs">
                    <button class="tab active" data-range="week">Tuần</button>
                    <button class="tab" data-range="month">Tháng</button>
                    <button class="tab" data-range="year">Năm</button>
                </div>
                <div class="range-label" id="rangeLabel"></div>
                <div id="scheduleContainer">
                    <div class="weekline" id="weekGrid"></div>
                    <div class="monthgrid" id="monthGrid" hidden></div>
                    <div class="yeargrid" id="yearGrid" hidden></div>
                </div>
            </div>

            <div class="card">
                <h3><span class="title-icon" aria-hidden="true">ℹ️</span> Thông Tin Chi Tiết</h3>
                <div class="details-grid">
                    <div><span>Bắt đầu</span><strong>7:00</strong></div>
                    <div><span>Số ngày còn tập</span><strong>10</strong></div>
                    <div><span>Buổi</span><strong>Sáng</strong></div>
                    <div><span>Kết thúc</span><strong>11:00</strong></div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-title">
                <h3><span class="title-icon" aria-hidden="true">📚</span> Danh Sách Các Bài Tập</h3>
                <div class="card-title-actions">
                    <button class="btn ghost small" id="btnViewAllExercises">Xem tất cả bài tập</button>
                    <button class="btn primary small" id="btnAddNewExercise">Thêm mới bài tập</button>
                </div>
            </div>
            <div id="exercise-list" class="exercise-list"></div>
            <div class="actions">
                <button class="btn ghost">Tăng cường</button>
                <button class="btn danger" id="finishEarly">Kết thúc sớm</button>
            </div>
        </div>

        <div class="grid-2">
            <div class="card">
                <h3><span class="title-icon" aria-hidden="true">📊</span> Thống Kê Bài Tập</h3>
                <div class="chart-wrap">
                    <ul class="ylabels" aria-hidden="true">
                        <li>8</li><li>6</li><li>4</li><li>2</li><li>0</li>
                    </ul>
                    <div class="barchart" aria-label="Thống kê">
                        <div class="bar" style="--h:80%"><span>Tập luyện</span></div>
                        <div class="bar" style="--h:20%"><span>Nghỉ ngơi</span></div>
                        <div class="bar" style="--h:55%"><span>Dự kiến</span></div>
                        <div class="bar" style="--h:75%"><span>Hoàn thành</span></div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="stats">
                    <div class="stat">
                        <div class="badge green">1200</div>
                        <small>kcal ước tính</small>
                    </div>
                    <div class="stat">
                        <div class="badge yellow">7/10</div>
                        <small>Hiệu quả</small>
                    </div>
                    <div class="stat">
                        <div class="badge red">Khá</div>
                        <small>Mức độ</small>
                    </div>
                </div>
                <div class="advice">
                    <h4>Lời Khuyên Dành Cho Bạn</h4>
                    <p>Giữ nhịp thở ổn định và tăng khối lượng từ từ.</p>
                </div>
            </div>
        </div>

        <!-- Section Nhật Ký Hoàn Thành Bài Tập -->
        <div class="card">
            <div class="card-title">
                <h3><span class="title-icon" aria-hidden="true">📝</span> Nhật Ký Hoàn Thành Bài Tập</h3>
                <button class="btn ghost small" id="btnRefreshJournal">Làm mới</button>
            </div>
            <div id="exercise-journal" class="exercise-journal">
                <div style="text-align: center; padding: 2rem; color: var(--muted);">Đang tải nhật ký...</div>
            </div>
        </div>

        <footer class="footer">
            <button class="btn primary" id="btnComplete">Hoàn thành</button>
        </footer>
    </section>

    <!-- View 2: Chi tiết bài tập -->
    <section id="view-detail" class="view">
        <header class="page-header">
            <button id="btnBack" class="icon-btn" aria-label="back">◀</button>
            <h1>Triển Khai Luyện Tập</h1>
        </header>

        <div class="grid-2">
            <div class="card">
                <h3><span class="title-icon" aria-hidden="true">⏱️</span> Thời gian tập</h3>
                <div class="timer-wrap" id="timerWrap">
                    <div class="timer" id="timer">00:00:00</div>
                    <span class="sweep" id="timerSweep" aria-hidden="true"></span>
                </div>
                <div class="actions wrap">
                    <button class="btn success" id="btnStart">Bắt Đầu</button>
                    <button class="btn warning" id="btnPause">Tạm Nghỉ</button>
                    <button class="btn primary" id="btnDone">Xong</button>
                    <button class="btn ghost right" id="btnReset">Đặt lại</button>
                </div>
                <h4>Lịch sử lần tập</h4>
                <ul id="sessionList" class="history small"></ul>
            </div>

            <div class="card" id="detail-info">
                <h3><span class="title-icon" aria-hidden="true">💪</span> Bài tập: <span id="detail-title">(Tên bài tập)</span></h3>
                <div class="metrics">
                    <div class="metric soft-yellow"><div class="ico">🗓️</div><div class="num" id="m-sets">45</div><div class="cap">Số buổi tập</div></div>
                    <div class="metric soft-red"><div class="ico">⏱️</div><div class="num" id="m-rest">30</div><div class="cap">Thời gian nghỉ</div></div>
                    <div class="metric soft-blue"><div class="ico">🎯</div><div class="num" id="m-quality">Tốt</div><div class="cap">Hiệu quả</div></div>
                    <div class="metric soft-green"><div class="ico">🔥</div><div class="num" id="m-kcal">1200</div><div class="cap">Calo đốt trung bình</div></div>
                    <div class="metric soft-purple"><div class="ico">📈</div><div class="num" id="m-ratio">15 / 3 - 5 / 1</div><div class="cap">Tần suất</div></div>
                    <div class="metric soft-violet"><div class="ico">⚠️</div><div class="num" id="m-level">Khó</div><div class="cap">Mức độ</div></div>
                </div>

                <div class="media">
                    <img id="detail-thumb" alt="Ảnh bài tập" />
                </div>
                <div class="field">
                    <label>Nội dung bài tập</label>
                    <p id="detail-desc"></p>
                </div>
                <div class="field">
                    <label>Hướng dẫn</label>
                    <div class="guide-box">
                        <span class="guide-step">1</span>
                        <div class="guide-text" id="detail-guide">…</div>
                    </div>
                </div>
                <div class="warn">
                    <strong>Cảnh báo</strong>
                    <span class="ico" aria-hidden="true">⚠️</span>
                    <ul class="warn-list">
                        <li>Nội dung bài tập cần khởi động kỹ</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="grid-2">
            <div class="card">
                <h3><span class="title-icon" aria-hidden="true">📊</span> Thống Kê Bài Tập (Thời gian)</h3>
                <div class="chart-wrap">
                    <ul class="ylabels" aria-hidden="true">
                        <li>8</li><li>6</li><li>4</li><li>2</li><li>0</li>
                    </ul>
                    <div class="barchart" aria-label="Thống kê thời gian">
                        <div class="bar" style="--h:80%"><span>Tập luyện</span></div>
                        <div class="bar" style="--h:20%"><span>Nghỉ ngơi</span></div>
                        <div class="bar" style="--h:55%"><span>Dự kiến</span></div>
                        <div class="bar" style="--h:70%"><span>Hoàn thành</span></div>
                    </div>
                </div>
            </div>
            <div class="card">
                <h3><span class="title-icon" aria-hidden="true">💡</span> Gợi ý kỹ thuật</h3>
                <ul class="history small">
                    <li><span>Giữ lưng trung lập</span><b>Tránh cong</b></li>
                    <li><span>Kiểm soát nhịp thở</span><b>Hít xuống - thở lên</b></li>
                    <li><span>Tăng tải từ từ</span><b>5-10%</b></li>
                </ul>
            </div>
        </div>
        <footer class="footer sticky">
            <button class="btn primary xl" id="btnReview">Đánh Giá</button>
        </footer>
    </section>
</div>

<script>
    // Kiểm tra đăng nhập khi trang load
    document.addEventListener('DOMContentLoaded', async function() {
        @if (ViewData["RequireLogin"] != null && (bool)ViewData["RequireLogin"])
        {
            <text>
            showLoginRequiredNotification('@ViewData["LoginMessage"]');
            </text>
        }
        else
        {
            <text>
            // Kiểm tra authentication từ server
            try {
                const response = await fetch('/Account/IsAuthenticated', { credentials: 'same-origin' });
                const result = await response.json();
                if (!result.isAuthenticated) {
                    showLoginRequiredNotification('Vui lòng đăng nhập để sử dụng tính năng này.');
                }
            } catch (error) {
                console.error('Error checking authentication:', error);
            }
            </text>
        }
    });

    function showLoginRequiredNotification(message) {
        // Tạo overlay
        const overlay = document.createElement('div');
        overlay.style.cssText = 'position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.7); z-index: 10000; display: flex; align-items: center; justify-content: center; backdrop-filter: blur(5px);';
        
        // Tạo dialog
        const dialog = document.createElement('div');
        dialog.style.cssText = 'background: rgba(30, 41, 59, 0.98); padding: 2rem; border-radius: 20px; max-width: 500px; width: 90%; text-align: center; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5); animation: slideUp 0.3s ease;';
        
        dialog.innerHTML = `
            <div style="font-size: 3rem; color: #ef4444; margin-bottom: 1rem;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #fff;">Yêu cầu đăng nhập</h2>
            <p style="font-size: 1rem; opacity: 0.8; margin-bottom: 2rem; color: #fff;">${message}</p>
            <div style="display: flex; gap: 1rem; justify-content: center;">
                <a href="/Account/Login" style="padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #4ade80, #22d3ee); color: #fff; border-radius: 12px; text-decoration: none; font-weight: 600; transition: all 0.3s ease;">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </a>
                <a href="/" style="padding: 0.75rem 1.5rem; background: rgba(255, 255, 255, 0.1); color: #fff; border-radius: 12px; text-decoration: none; font-weight: 600; transition: all 0.3s ease;">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
            </div>
        `;
        
        overlay.appendChild(dialog);
        document.body.appendChild(overlay);
        
        // Thêm animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes slideUp {
                from {
                    transform: translateY(50px);
                    opacity: 0;
                }
                to {
                    transform: translateY(0);
                    opacity: 1;
                }
            }
        `;
        document.head.appendChild(style);
        
        // Đóng khi click vào overlay
        overlay.addEventListener('click', function(e) {
            if (e.target === overlay) {
                window.location.href = '/';
            }
        });
    }
</script>