    <title>Admin Dashboard - WebHealthy</title>
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/asset/css/admin.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

    <!-- JavaScript Files -->
    <script src="~/asset/js/sidebar.js" asp-append-version="true"></script>
    <script>
        // Redirect to thongKe.html immediately
        window.location.replace('/Admin/ThongKe');
    </script>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-dumbbell"></i> WebHealthy</h2>
                <p class="admin-title">Quản trị viên</p>
            </div>

            <nav class="sidebar-nav">
                <ul>
                    <li class="nav-item">
                        <i class="fas fa-chart-line"></i>
                        <span><a href="/Admin/ThongKe" style="text-decoration: none; color: inherit;">Thống kê tổng quan</a></span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-users"></i>
                        <span><a href="/Admin/QuanLiUser" style="text-decoration: none; color: inherit;">Quản lý người dùng</a></span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-user-tie"></i>
                        <span><a href="/Admin/QuanLiPT" style="text-decoration: none; color: inherit;">Quản lý huấn luyện viên</a></span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-dumbbell"></i>
                        <span><a href="/Admin/QuanLiBaiTap" style="text-decoration: none; color: inherit;">Quản lý bài tập</a></span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-apple-alt"></i>
                        <span><a href="/Admin/QuanLiDinhDuong" style="text-decoration: none; color: inherit;">Quản lý dinh dưỡng</a></span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-money-bill-wave"></i>
                        <span><a href="/Admin/QuanLiGiaoDich" style="text-decoration: none; color: inherit;">Quản lý giao dịch</a></span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-cog"></i>
                        <span><a href="/Admin/HeThongBaoMat" style="text-decoration: none; color: inherit;">Hệ thống & bảo mật</a></span>
                    </li>
                </ul>
            </nav>

            <div class="sidebar-footer">
                <div class="user-profile">
                    <i class="fas fa-user-circle"></i>
                    <span>Admin User</span>
                </div>
                <button class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Đăng xuất
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="main-header">
                <h1>Admin Dashboard</h1>
                <div class="header-icons">
                    <i class="fas fa-search"></i>
                    <div class="notification">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </div>
                    <i class="fas fa-user-circle"></i>
                </div>
            </header>

            <!-- Welcome Section -->
            <section id="welcome" class="content-section active">
                <div class="welcome-card">
                    <h2><i class="fas fa-home"></i> Chào mừng đến với Admin Dashboard</h2>
                    <p>Sử dụng menu bên trái để truy cập các trang quản lý:</p>
                    <div class="quick-links">
                        <a href="thongKe.html" class="quick-link-card">
                            <i class="fas fa-chart-line"></i>
                            <h3>Thống kê tổng quan</h3>
                            <p>Xem báo cáo và phân tích</p>
                        </a>
                        <a href="quanLiUser.html" class="quick-link-card">
                            <i class="fas fa-users"></i>
                            <h3>Quản lý người dùng</h3>
                            <p>Quản lý tài khoản người dùng</p>
                        </a>
                        <a href="quanLiPT.html" class="quick-link-card">
                            <i class="fas fa-user-tie"></i>
                            <h3>Quản lý huấn luyện viên</h3>
                            <p>Xác minh và quản lý PT</p>
                        </a>
                        <a href="quanLiBaiTap.html" class="quick-link-card">
                            <i class="fas fa-dumbbell"></i>
                            <h3>Quản lý bài tập</h3>
                            <p>Thêm và chỉnh sửa bài tập</p>
                        </a>
                        <a href="quanLiDinhDuong.html" class="quick-link-card">
                            <i class="fas fa-apple-alt"></i>
                            <h3>Quản lý dinh dưỡng</h3>
                            <p>Quản lý món ăn và công thức</p>
                        </a>
                        <a href="quanLiGiaoDich.html" class="quick-link-card">
                            <i class="fas fa-money-bill-wave"></i>
                            <h3>Quản lý giao dịch</h3>
                            <p>Theo dõi giao dịch và doanh thu</p>
                        </a>
                        <a href="heThongBaoMat.html" class="quick-link-card">
                            <i class="fas fa-cog"></i>
                            <h3>Hệ thống & bảo mật</h3>
                            <p>Cài đặt và quản lý hệ thống</p>
                        </a>
                    </div>
                </div>
            </section>
        </main>
    </div>
