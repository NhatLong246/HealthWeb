    if (!top3 || top3.length === 0) {
        container.innerHTML = '<p>Ch∆∞a c√≥ d·ªØ li·ªáu</p>';
        return;
    }

    // top3 is already ordered by ThuHang ASC [1, 2, 3]
    // We need to display them in podium order: [1, 0, 2] (2nd, 1st, 3rd) 
    // Visual order: [2nd (left), 1st (center), 3rd (right)]
