<script>
document.addEventListener('DOMContentLoaded', function() {
    const periodTabs = document.querySelectorAll('.period-tab');
    let currentPeriod = 'Weekly';

    // Period tab click handler
    periodTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            periodTabs.forEach(t => t.classList.remove('active'));
            this.classList.add('active');
            currentPeriod = this.getAttribute('data-period');
            loadLeaderboard(currentPeriod);
        });
    });

    // Load initial leaderboard
    loadLeaderboard(currentPeriod);
});

async function loadLeaderboard(period) {
    const loadingState = document.getElementById('loadingState');
    const podiumContainer = document.getElementById('podiumContainer');
    const leaderboardContainer = document.getElementById('leaderboardContainer');
    const emptyState = document.getElementById('emptyState');
    const podiumContent = document.getElementById('podiumContent');
    const leaderboardList = document.getElementById('leaderboardList');

    // Show loading
    loadingState.style.display = 'block';
    podiumContainer.style.display = 'none';
    leaderboardContainer.style.display = 'none';
    emptyState.style.display = 'none';

    try {
        const response = await fetch(`/Ranking/GetLeaderboard?period=${period}`);
        console.log('Response status:', response.status);
        const result = await response.json();
        console.log('Leaderboard data:', result); // Debug log
        console.log('Result success:', result.success);
        console.log('Result data:', result.data);
        console.log('Result data length:', result.data?.length);

        if (result.success && result.data && result.data.length > 0) {
            const rankings = result.data;
            console.log('First ranking item:', rankings[0]);
            
            // Display top 3 on podium
            const top3 = rankings.slice(0, 3);
            displayPodium(top3, podiumContent);
            podiumContainer.style.display = 'block';

            // Display rest in list
            if (rankings.length > 3) {
                displayLeaderboard(rankings.slice(3), leaderboardList);
                leaderboardContainer.style.display = 'block';
            }

            // Load and display personal stats (TODO: get current user ID from auth)
            // For now, assume user_0001 is current user
            loadPersonalStats('user_0001', period);
        } else {
            console.log('No data or error:', result);
            emptyState.style.display = 'block';
            
            // Hide personal stats when no data
            document.getElementById('personalStatsContainer').style.display = 'none';
        }
    } catch (error) {
        console.error('Error loading leaderboard:', error);
        console.error('Full error:', error);
        emptyState.style.display = 'block';
        
        // Hide personal stats on error
        document.getElementById('personalStatsContainer').style.display = 'none';
    } finally {
        loadingState.style.display = 'none';
    }
}

