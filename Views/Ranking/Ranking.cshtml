function displayPodium(top3, container) {
    // top3 is already ordered by ThuHang ASC [1, 2, 3]
    // We need to display them in podium order: [2, 1, 3] (2nd, 1st, 3rd)
    const podiumOrder = [1, 0, 2]; // indexes: second, first, third
    const medals = ['ü•à', 'ü•á', 'ü•â'];
    
    container.innerHTML = podiumOrder.map((idx, podiumIdx) => {
        const user = top3[idx];
        const rank = user.ThuHang || user.thuHang || (idx + 1);
        const medal = medals[podiumIdx];
        
        // Try both PascalCase and camelCase
        const username = user.Username || user.username || 'Unknown';
        const hoTen = user.HoTen || user.hoTen;
        const tongDiem = user.TongDiem || user.tongDiem || 0;
        const anhDaiDien = user.AnhDaiDien || user.anhDaiDien;
        
        const avatar = anhDaiDien ? `<img src="${anhDaiDien}" alt="${username}">` 
                      : `<i class="fas fa-user"></i>`;
        
        return `
            <div class="podium-item">
                <div class="podium-rank" style="background: linear-gradient(135deg, ${getRankColor(rank)});">
                    ${medal}
                </div>
                <div class="podium-avatar" style="background: linear-gradient(135deg, ${getRankColor(rank)});">
                    ${avatar}
                </div>
                <div class="podium-stand">
                    <div class="podium-name">${hoTen || username}</div>
                    <div class="podium-points">${formatNumber(tongDiem)} ƒëi·ªÉm</div>
                </div>
            </div>
        `;
    }).join('');
}

function displayLeaderboard(rankings, container) {
    container.innerHTML = rankings.map((user, idx) => {
        const rank = idx + 4; // Starting from 4th place
        
        // Try both PascalCase and camelCase
        const username = user.Username || user.username || 'Unknown';
        const hoTen = user.HoTen || user.hoTen;
        const tongDiem = user.TongDiem || user.tongDiem || 0;
        const anhDaiDien = user.AnhDaiDien || user.anhDaiDien;
        
        const avatar = anhDaiDien ? `<img src="${anhDaiDien}" alt="${username}">` 
                      : `<i class="fas fa-user"></i>`;
        
        return `
            <div class="leaderboard-item">
                <div class="leaderboard-rank">${rank}</div>
                <div class="leaderboard-avatar" style="background: linear-gradient(135deg, #4ade80, #22d3ee);">
                    ${avatar}
                </div>
                <div class="leaderboard-info">
                    <div class="leaderboard-name">${hoTen || username}</div>
                    <div class="leaderboard-username">@@${username}</div>
                </div>
                <div class="leaderboard-points">
                    <i class="fas fa-fire"></i>
                    ${formatNumber(tongDiem)}
                </div>
            </div>
        `;
    }).join('');
}

function getRankColor(rank) {
    switch(rank) {
        case 1: return '#fbbf24, #f59e0b';
        case 2: return '#94a3b8, #64748b';
        case 3: return '#fb923c, #ea580c';
        default: return '#4ade80, #22d3ee';
    }
}

function formatNumber(num) {
    return new Intl.NumberFormat('vi-VN').format(num);
}

async function loadPersonalStats(userId, period) {
    try {
        const response = await fetch(`/Ranking/GetPersonalStats?userId=${userId}&period=${period}`);
        const result = await response.json();
        
        if (result.success && result.data) {
            displayPersonalStats(result.data);
        } else {
            document.getElementById('personalStatsContainer').style.display = 'none';
        }
    } catch (error) {
        console.error('Error loading personal stats:', error);
        document.getElementById('personalStatsContainer').style.display = 'none';
    }
}

function displayPersonalStats(data) {
    const personalStatsContainer = document.getElementById('personalStatsContainer');
    
    // Update personal stats
    document.getElementById('personalRank').textContent = `#${data.Rank || data.rank || 0}`;
    document.getElementById('personalPoints').textContent = formatNumber(data.Points || data.points || 0);
    document.getElementById('personalTime').textContent = `${data.TotalHours || data.totalHours || 0}h`;
    document.getElementById('personalSessions').textContent = data.Sessions || data.sessions || 0;
    
    personalStatsContainer.style.display = 'block';
}
