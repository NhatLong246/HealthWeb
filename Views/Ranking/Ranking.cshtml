<script>
// Global variables
let currentUserId = null;
let currentPeriod = 'Weekly';

// Function to get userId from localStorage
function getCurrentUserId() {
    if (currentUserId !== null) {
        return currentUserId;
    }
    
    try {
        const authData = localStorage.getItem('hw_is_auth');
        const username = localStorage.getItem('hw_username');
        if (authData === 'true' && username) {
            // C√≥ th·ªÉ l∆∞u userId v√†o localStorage khi login
            currentUserId = localStorage.getItem('hw_userId') || null;
            return currentUserId;
        }
    } catch (e) {
        console.warn('Could not get user ID from localStorage:', e);
    }
    
    return null;
}

document.addEventListener('DOMContentLoaded', function() {
    const periodTabs = document.querySelectorAll('.period-tab');
    
    // L·∫•y userId khi load page
    currentUserId = getCurrentUserId();
    currentPeriod = 'All';

    // Period tab click handler
    periodTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            periodTabs.forEach(t => t.classList.remove('active'));
            this.classList.add('active');
            currentPeriod = this.getAttribute('data-period');
            loadLeaderboard(currentPeriod);
        });
    });

    // Load initial leaderboard
    loadLeaderboard(currentPeriod);
});

async function loadLeaderboard(period) {
    const loadingState = document.getElementById('loadingState');
    const podiumContainer = document.getElementById('podiumContainer');
    const leaderboardContainer = document.getElementById('leaderboardContainer');
    const emptyState = document.getElementById('emptyState');
    const podiumContent = document.getElementById('podiumContent');
    const leaderboardList = document.getElementById('leaderboardList');

    // Show loading
    loadingState.style.display = 'block';
    podiumContainer.style.display = 'none';
    leaderboardContainer.style.display = 'none';
    emptyState.style.display = 'none';
    document.getElementById('personalStatsContainer').style.display = 'none';

    try {
        const response = await fetch(`/Ranking/GetLeaderboard?period=${period}`);
        
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const result = await response.json();

        if (result.success && result.data && result.data.length > 0) {
            const rankings = result.data;
            
            // Display top 3 on podium
            const top3 = rankings.slice(0, 3);
            displayPodium(top3, podiumContent);
            podiumContainer.style.display = 'block';

            // Display rest in list
            if (rankings.length > 3) {
                displayLeaderboard(rankings.slice(3), leaderboardList, getCurrentUserId());
                leaderboardContainer.style.display = 'block';
            } else {
                leaderboardContainer.style.display = 'none';
            }

            // Load and display personal stats
            // Try to get userId from localStorage or use first user as fallback
            let userId = getCurrentUserId();
            
            // If no userId from localStorage, try to find current user in rankings
            if (!userId && rankings.length > 0) {
                // Try to find user by checking if they match any ranking
                // For demo, use first user or find by username
                const username = localStorage.getItem('hw_username');
                if (username) {
                    const userInRankings = rankings.find(r => {
                        const rUsername = (r.Username || r.username || '').toLowerCase();
                        return rUsername === username.toLowerCase();
                    });
                    if (userInRankings) {
                        userId = userInRankings.UserId || userInRankings.userId;
                        console.log('Found user in rankings by username:', username, 'userId:', userId);
                    }
                }
                
                // Fallback to first user if still no userId
                if (!userId && rankings.length > 0) {
                    userId = rankings[0].UserId || rankings[0].userId;
                    console.log('Using first user from rankings as fallback:', userId);
                }
            }
            
            console.log('Final userId for loading user info:', userId);
            
            // Always try to load personal stats if we have a userId
            if (userId) {
                loadPersonalStats(userId, period);
            }
        } else {
            console.warn('No ranking data found:', result.message || 'Unknown error');
            emptyState.style.display = 'block';
        }
    } catch (error) {
        console.error('Error loading leaderboard:', error);
        emptyState.style.display = 'block';
        emptyState.innerHTML = `
            <i class="fas fa-exclamation-triangle"></i>
            <p>Kh√¥ng th·ªÉ t·∫£i d·ªØ li·ªáu x·∫øp h·∫°ng. Vui l√≤ng th·ª≠ l·∫°i sau.</p>
        `;
    } finally {
        loadingState.style.display = 'none';
    }
}

