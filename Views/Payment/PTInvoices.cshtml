@{
    ViewData["Title"] = "Hóa đơn khách hàng - HealthWeb";
    Layout = "_Layout";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    .invoices-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2rem;
    }

    .invoices-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .invoices-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .invoices-header p {
        font-size: 1.1rem;
        opacity: 0.8;
    }

    .invoices-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: rgba(30, 41, 59, 0.8);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    }

    body.light-mode .stat-card {
        background: rgba(255, 255, 255, 0.9);
    }

    .stat-card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-icon.pending {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
    }

    .stat-icon.completed {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .stat-icon.revenue {
        background: rgba(59, 130, 246, 0.2);
        color: #3b82f6;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
    }

    .invoices-list {
        margin-top: 2rem;
    }

    .invoice-card {
        background: rgba(30, 41, 59, 0.8);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

    body.light-mode .invoice-card {
        background: rgba(255, 255, 255, 0.9);
    }

    .invoice-card:hover {
        transform: translateY(-5px);
    }

    .invoice-card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(148, 163, 184, 0.2);
    }

    .invoice-client-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .client-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4ade80, #22c55e);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #fff;
        overflow: hidden;
    }

    .client-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .client-details h3 {
        margin: 0 0 0.25rem 0;
        font-size: 1.25rem;
    }

    .client-details p {
        margin: 0;
        opacity: 0.7;
        font-size: 0.9rem;
    }

    .invoice-status {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-pending {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
    }

    .status-completed {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .invoice-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .detail-item i {
        color: #4ade80;
        width: 20px;
    }

    .invoice-amounts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin: 1rem 0;
        padding: 1rem;
        background: rgba(15, 23, 42, 0.5);
        border-radius: 12px;
    }

    body.light-mode .invoice-amounts {
        background: rgba(251, 146, 60, 0.1);
    }

    .amount-item {
        text-align: center;
    }

    .amount-label {
        font-size: 0.85rem;
        opacity: 0.8;
        margin-bottom: 0.25rem;
    }

    .amount-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #4ade80;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        opacity: 0.7;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    .loading-state {
        text-align: center;
        padding: 3rem;
    }

    .loading-state i {
        font-size: 3rem;
        color: #4ade80;
        margin-bottom: 1rem;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>

<div class="invoices-container">
    <div class="invoices-header">
        <h1><i class="fas fa-file-invoice-dollar"></i> Hóa đơn khách hàng</h1>
        <p>Xem tình trạng thanh toán của các khách hàng</p>
    </div>

    <div class="invoices-stats" id="invoicesStats">
        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon pending">
                    <i class="fas fa-clock"></i>
                </div>
                <div>
                    <div class="stat-label">Chờ thanh toán</div>
                    <div class="stat-value" id="pendingCount">0</div>
                </div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon completed">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <div class="stat-label">Đã thanh toán</div>
                    <div class="stat-value" id="completedCount">0</div>
                </div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon revenue">
                    <i class="fas fa-wallet"></i>
                </div>
                <div>
                    <div class="stat-label">Tổng doanh thu</div>
                    <div class="stat-value" id="totalRevenue">0 đ</div>
                </div>
            </div>
        </div>
    </div>

    <div class="invoices-list" id="invoicesList">
        <div class="loading-state">
            <i class="fas fa-spinner"></i>
            <p>Đang tải danh sách hóa đơn...</p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', async function() {
        await loadInvoices();
    });

    async function loadInvoices() {
        const container = document.getElementById('invoicesList');
        
        try {
            const response = await fetch('/Payment/PT/Invoices/Data');
            const result = await response.json();
            
            if (!result.success || !result.data) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h3>Không có hóa đơn nào</h3>
                        <p>Bạn chưa có khách hàng nào đặt lịch</p>
                    </div>
                `;
                updateStats([]);
                return;
            }

            const invoices = result.data;
            
            if (invoices.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h3>Không có hóa đơn nào</h3>
                        <p>Bạn chưa có khách hàng nào đặt lịch</p>
                    </div>
                `;
                updateStats([]);
                return;
            }

            // Update stats
            updateStats(invoices);

            // Render invoices list
            container.innerHTML = invoices.map(invoice => {
                const statusClass = `status-${(invoice.paymentStatus || 'pending').toLowerCase()}`;
                const statusText = formatPaymentStatus(invoice.paymentStatus || 'Pending');
                const dateTime = invoice.dateTime ? new Date(invoice.dateTime) : null;
                const formattedDate = dateTime ? dateTime.toLocaleDateString('vi-VN', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                }) : 'N/A';

                const amount = invoice.amount || 0;
                const commission = invoice.commission || 0;
                const ptRevenue = invoice.ptRevenue || 0;

                return `
                    <div class="invoice-card">
                        <div class="invoice-card-header">
                            <div class="invoice-client-info">
                                <div class="client-avatar">
                                    ${invoice.clientAvatar && invoice.clientAvatar !== '/images/default-avatar.png' 
                                        ? `<img src="${escapeHtml(invoice.clientAvatar)}" alt="${escapeHtml(invoice.clientName)}">` 
                                        : `<i class="fas fa-user"></i>`}
                                </div>
                                <div class="client-details">
                                    <h3>${escapeHtml(invoice.clientName || 'N/A')}</h3>
                                    <p>Mã giao dịch: ${escapeHtml(invoice.transactionId || 'N/A')}</p>
                                </div>
                            </div>
                            <div class="invoice-status ${statusClass}">
                                ${statusText}
                            </div>
                        </div>
                        <div class="invoice-details">
                            <div class="detail-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>${formattedDate}</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-dumbbell"></i>
                                <span>${escapeHtml(invoice.sessionType || 'N/A')}</span>
                            </div>
                            ${invoice.paymentMethod ? `
                                <div class="detail-item">
                                    <i class="fas fa-wallet"></i>
                                    <span>${escapeHtml(invoice.paymentMethod)}</span>
                                </div>
                            ` : ''}
                        </div>
                        <div class="invoice-amounts">
                            <div class="amount-item">
                                <div class="amount-label">Tổng tiền</div>
                                <div class="amount-value">${amount.toLocaleString('vi-VN')} đ</div>
                            </div>
                            <div class="amount-item">
                                <div class="amount-label">Hoa hồng app</div>
                                <div class="amount-value" style="color: #fbbf24;">-${commission.toLocaleString('vi-VN')} đ</div>
                            </div>
                            <div class="amount-item">
                                <div class="amount-label">Bạn nhận được</div>
                                <div class="amount-value" style="color: #22c55e;">${ptRevenue.toLocaleString('vi-VN')} đ</div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        } catch (error) {
            console.error('Error loading invoices:', error);
            container.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h3>Lỗi khi tải danh sách</h3>
                    <p>Vui lòng thử lại sau</p>
                </div>
            `;
        }
    }

    function updateStats(invoices) {
        const pending = invoices.filter(i => i.paymentStatus !== 'Completed').length;
        const completed = invoices.filter(i => i.paymentStatus === 'Completed').length;
        const totalRevenue = invoices
            .filter(i => i.paymentStatus === 'Completed')
            .reduce((sum, i) => sum + (i.ptRevenue || 0), 0);

        document.getElementById('pendingCount').textContent = pending;
        document.getElementById('completedCount').textContent = completed;
        document.getElementById('totalRevenue').textContent = totalRevenue.toLocaleString('vi-VN') + ' đ';
    }

    function formatPaymentStatus(status) {
        const statusMap = {
            'Pending': 'Chờ thanh toán',
            'Completed': 'Đã thanh toán',
            'Refunded': 'Đã hoàn tiền'
        };
        return statusMap[status] || status;
    }

    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
</script>

