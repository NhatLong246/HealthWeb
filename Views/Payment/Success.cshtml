@{
    ViewData["Title"] = "Thanh toán thành công - HealthWeb";
    Layout = "_Layout";
}

<style>
    .success-container {
        max-width: 600px;
        margin: 4rem auto;
        padding: 2rem;
        text-align: center;
    }

    .success-card {
        background: rgba(30, 41, 59, 0.8);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    body.light-mode .success-card {
        background: rgba(255, 255, 255, 0.9);
    }

    .success-icon {
        font-size: 5rem;
        color: #22c55e;
        margin-bottom: 1.5rem;
        animation: scaleIn 0.5s ease;
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    .success-title {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .success-message {
        font-size: 1.1rem;
        opacity: 0.8;
        margin-bottom: 2rem;
    }

    .success-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
    }

    .btn-action {
        padding: 0.75rem 2rem;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #4ade80, #22c55e);
        color: #fff;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(78, 222, 128, 0.4);
    }

    .btn-secondary {
        background: rgba(148, 163, 184, 0.2);
        color: #94a3b8;
        border: 2px solid rgba(148, 163, 184, 0.3);
    }

    .btn-secondary:hover {
        background: rgba(148, 163, 184, 0.3);
    }
</style>

<div class="success-container">
    <div class="success-card">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 class="success-title">Thanh toán thành công!</h1>
        <p class="success-message">
            Giao dịch của bạn đã được xử lý thành công. Đang chuyển hướng...
        </p>
        <div class="success-actions">
            <a href="/Payment/MyPayments" class="btn-action btn-primary" id="redirectLink">
                <i class="fas fa-list"></i> Xem danh sách thanh toán
            </a>
            <a href="/" class="btn-action btn-secondary">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>

<script>
    // Tự động redirect về trang danh sách thanh toán sau 2 giây
    setTimeout(function() {
        window.location.href = '/Payment/MyPayments';
    }, 2000);
</script>

