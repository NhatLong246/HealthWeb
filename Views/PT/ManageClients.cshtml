@{
    ViewData["Title"] = "Quản Lý Khách Hàng - HealthWeb";
    Layout = "_Layout";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/pt/pt-common.css">
<link rel="stylesheet" href="~/css/pt/manageClientsPT.css">

<div class="manage-clients-container">
    <div class="page-header">
        <h1><i class="fas fa-users"></i> Quản Lý Khách Hàng</h1>
        <p>Quản lý danh sách khách hàng của bạn và theo dõi tiến độ tập luyện</p>
    </div>

    <!-- Stats Overview -->
    <div class="stats-overview">
        <div class="stat-box">
            <div class="stat-box-value" id="totalClients">0</div>
            <div class="stat-box-label">Tổng Khách Hàng</div>
        </div>
        <div class="stat-box">
            <div class="stat-box-value" id="activeClients">0</div>
            <div class="stat-box-label">Đang Hoạt Động</div>
        </div>
        <div class="stat-box">
            <div class="stat-box-value" id="totalSessions">0</div>
            <div class="stat-box-label">Tổng Buổi Tập</div>
        </div>
        <div class="stat-box">
            <div class="stat-box-value" id="avgRating">0.0</div>
            <div class="stat-box-label">Đánh Giá TB</div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
        <div class="search-and-filters">
            <div class="search-input-wrapper">
                <i class="fas fa-search"></i>
                <input type="text" class="search-input" id="searchInput" placeholder="Tìm kiếm theo tên, username, email...">
            </div>
            <div class="filter-tabs" id="statusFilters">
                <button class="filter-tab active" data-filter="all">Tất cả</button>
                <button class="filter-tab" data-filter="active">Đang hoạt động</button>
                <button class="filter-tab" data-filter="inactive">Không hoạt động</button>
                <button class="filter-tab" data-filter="pending">Chờ duyệt</button>
            </div>
        </div>
    </div>

    <!-- Clients Table -->
    <div class="clients-section">
        <div class="section-header">
            <h2><i class="fas fa-list"></i> Danh Sách Khách Hàng</h2>
            <span style="font-size: 0.9rem; opacity: 0.7;" id="clientsCount">0 khách hàng</span>
        </div>

        <table class="clients-table">
            <thead>
                <tr>
                    <th>Khách hàng</th>
                    <th>Mục tiêu</th>
                    <th>Số buổi</th>
                    <th>Trạng thái</th>
                    <th>Đánh giá</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody id="clientsTableBody">
                <tr>
                    <td colspan="6" class="empty-state">
                        <i class="fas fa-users"></i>
                        <p>Đang tải danh sách khách hàng...</p>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/pt/manageClientsPT.js"></script>

