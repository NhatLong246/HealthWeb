@{
    ViewData["Title"] = "Đăng Ký Huấn Luyện Viên - HealthWeb";
    Layout = "_Layout";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/pt/pt-common.css">
<link rel="stylesheet" href="~/css/pt/registerPT.css">

<div class="pt-register-container">
    <div class="register-header">
        <h1><i class="fas fa-user-graduate"></i> Đăng Ký Huấn Luyện Viên</h1>
        <p>Trở thành huấn luyện viên chuyên nghiệp trên HealthWeb và giúp mọi người đạt được mục tiêu sức khỏe</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message" style="background: #4ade80; color: white; padding: 1rem 1.5rem; border-radius: 8px; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem; box-shadow: 0 4px 12px rgba(74, 222, 128, 0.3);">
            <i class="fas fa-check-circle" style="font-size: 1.25rem;"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    <form class="register-card" method="post" action="/PT/RegisterPT" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <!-- Thông tin cá nhân -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-user"></i> Thông Tin Cá Nhân
            </div>
            
            <div class="form-grid">
                <div class="form-group full-width">
                    <label for="firstName">Họ và Tên <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input type="text" id="firstName" name="UserHoTen" required placeholder="Nhập họ và tên" value="@(ViewBag.UserData?.UserHoTen ?? "")">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="email" name="UserEmail" required placeholder="your.email@example.com" value="@(ViewBag.UserData?.UserEmail ?? "")">
                    </div>
                </div>

                <div class="form-group">
                    <label for="birthDate">Ngày sinh <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-calendar"></i>
                        <input type="date" id="birthDate" name="UserNgaySinh" placeholder="Ngày sinh" value="@(ViewBag.UserData?.UserNgaySinh ?? "")">
                    </div>
                </div>

                <div class="form-group">
                    <label for="city">Tỉnh/Thành phố <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-map-marker-alt"></i>
                        <select id="city" name="ThanhPho" required>
                            <option value="">Chọn tỉnh/thành phố</option>
                            <option value="An Giang">An Giang</option>
                            <option value="Bà Rịa - Vũng Tàu">Bà Rịa - Vũng Tàu</option>
                            <option value="Bắc Giang">Bắc Giang</option>
                            <option value="Bắc Kạn">Bắc Kạn</option>
                            <option value="Bạc Liêu">Bạc Liêu</option>
                            <option value="Bắc Ninh">Bắc Ninh</option>
                            <option value="Bến Tre">Bến Tre</option>
                            <option value="Bình Định">Bình Định</option>
                            <option value="Bình Dương">Bình Dương</option>
                            <option value="Bình Phước">Bình Phước</option>
                            <option value="Bình Thuận">Bình Thuận</option>
                            <option value="Cà Mau">Cà Mau</option>
                            <option value="Cần Thơ">Cần Thơ</option>
                            <option value="Cao Bằng">Cao Bằng</option>
                            <option value="Đà Nẵng">Đà Nẵng</option>
                            <option value="Đắk Lắk">Đắk Lắk</option>
                            <option value="Đắk Nông">Đắk Nông</option>
                            <option value="Điện Biên">Điện Biên</option>
                            <option value="Đồng Nai">Đồng Nai</option>
                            <option value="Đồng Tháp">Đồng Tháp</option>
                            <option value="Gia Lai">Gia Lai</option>
                            <option value="Hà Giang">Hà Giang</option>
                            <option value="Hà Nam">Hà Nam</option>
                            <option value="Hà Nội">Hà Nội</option>
                            <option value="Hà Tĩnh">Hà Tĩnh</option>
                            <option value="Hải Dương">Hải Dương</option>
                            <option value="Hải Phòng">Hải Phòng</option>
                            <option value="Hậu Giang">Hậu Giang</option>
                            <option value="Hòa Bình">Hòa Bình</option>
                            <option value="Hưng Yên">Hưng Yên</option>
                            <option value="Khánh Hòa">Khánh Hòa</option>
                            <option value="Kiên Giang">Kiên Giang</option>
                            <option value="Kon Tum">Kon Tum</option>
                            <option value="Lai Châu">Lai Châu</option>
                            <option value="Lâm Đồng">Lâm Đồng</option>
                            <option value="Lạng Sơn">Lạng Sơn</option>
                            <option value="Lào Cai">Lào Cai</option>
                            <option value="Long An">Long An</option>
                            <option value="Nam Định">Nam Định</option>
                            <option value="Nghệ An">Nghệ An</option>
                            <option value="Ninh Bình">Ninh Bình</option>
                            <option value="Ninh Thuận">Ninh Thuận</option>
                            <option value="Phú Thọ">Phú Thọ</option>
                            <option value="Phú Yên">Phú Yên</option>
                            <option value="Quảng Bình">Quảng Bình</option>
                            <option value="Quảng Nam">Quảng Nam</option>
                            <option value="Quảng Ngãi">Quảng Ngãi</option>
                            <option value="Quảng Ninh">Quảng Ninh</option>
                            <option value="Quảng Trị">Quảng Trị</option>
                            <option value="Sóc Trăng">Sóc Trăng</option>
                            <option value="Sơn La">Sơn La</option>
                            <option value="Tây Ninh">Tây Ninh</option>
                            <option value="Thái Bình">Thái Bình</option>
                            <option value="Thái Nguyên">Thái Nguyên</option>
                            <option value="Thanh Hóa">Thanh Hóa</option>
                            <option value="Thừa Thiên Huế">Thừa Thiên Huế</option>
                            <option value="Tiền Giang">Tiền Giang</option>
                            <option value="TP. Hồ Chí Minh">TP. Hồ Chí Minh</option>
                            <option value="Trà Vinh">Trà Vinh</option>
                            <option value="Tuyên Quang">Tuyên Quang</option>
                            <option value="Vĩnh Long">Vĩnh Long</option>
                            <option value="Vĩnh Phúc">Vĩnh Phúc</option>
                            <option value="Yên Bái">Yên Bái</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin tài khoản -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-key"></i> Thông Tin Tài Khoản
            </div>

            <div class="form-grid">
                @if (ViewBag.UserData == null)
                {
                    <div class="form-group">
                        <label for="username">Tên đăng nhập <span style="color: #ef4444;">*</span></label>
                        <div class="input-wrapper">
                            <i class="fas fa-at"></i>
                            <input type="text" id="username" name="Username" required placeholder="username">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">Mật khẩu <span style="color: #ef4444;">*</span></label>
                        <div class="input-wrapper">
                            <i class="fas fa-lock"></i>
                            <input type="password" id="password" name="UserPassword" required placeholder="Tối thiểu 8 ký tự">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Xác nhận mật khẩu <span style="color: #ef4444;">*</span></label>
                        <div class="input-wrapper">
                            <i class="fas fa-lock"></i>
                            <input type="password" id="confirmPassword" name="UserConfirmPassword" required placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                }
                else
                {
                    <input type="hidden" name="Username" value="@ViewBag.UserData.Username">
                    <div class="info-box">
                        <i class="fas fa-info-circle"></i>
                        <span>Bạn đã đăng nhập với tài khoản: <strong>@ViewBag.UserData.Username</strong>. Thông tin tài khoản sẽ được sử dụng để đăng ký làm PT.</span>
                    </div>
                }
            </div>
        </div>

        <!-- Thông tin chuyên môn -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-certificate"></i> Thông Tin Chuyên Môn
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label for="specialty">Chuyên môn <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-dumbbell"></i>
                        <select id="specialty" name="ChuyenMon" required>
                            <option value="">Chọn chuyên môn</option>
                            <option value="Gym">Gym / Tập tạ</option>
                            <option value="Cardio">Cardio / Giảm cân</option>
                            <option value="Yoga">Yoga / Stretching</option>
                            <option value="Pilates">Pilates</option>
                            <option value="Crossfit">Crossfit</option>
                            <option value="MartialArts">Võ thuật</option>
                            <option value="Rehabilitation">Phục hồi chức năng</option>
                            <option value="Other">Khác</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="experience">Kinh nghiệm <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-star"></i>
                        <select id="experience" name="SoNamKinhNghiem" required>
                            <option value="">Chọn mức kinh nghiệm</option>
                            <option value="0">Dưới 1 năm</option>
                            <option value="2">1-3 năm</option>
                            <option value="4">3-5 năm</option>
                            <option value="7">5-10 năm</option>
                            <option value="10">Trên 10 năm</option>
                        </select>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label for="certificates">Chứng chỉ / Bằng cấp</label>
                    <div class="input-wrapper">
                        <i class="fas fa-award"></i>
                        <textarea id="certificates" name="ChungChi" placeholder="Liệt kê các chứng chỉ, bằng cấp liên quan đến thể hình, thể thao..."></textarea>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label for="bio">Tiểu sử / Giới thiệu <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-info-circle"></i>
                        <textarea id="bio" name="TieuSu" required placeholder="Giới thiệu về bản thân, phương pháp tập luyện, thành tích..."></textarea>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label for="availableHours">Giờ làm việc <span style="color: #ef4444;">*</span></label>
                    <div class="input-wrapper">
                        <i class="fas fa-clock"></i>
                        <input type="text" id="availableHours" name="GioRanh" required placeholder="Ví dụ: Thứ 2-6: 6h-10h, 18h-22h | Thứ 7-CN: 8h-12h">
                    </div>
                </div>
            </div>
        </div>

        <!-- Tài liệu đính kèm -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-file-upload"></i> Tài Liệu Đính Kèm
            </div>

            <div class="info-box">
                <i class="fas fa-info-circle"></i>
                Vui lòng cung cấp ảnh chân dung và các giấy tờ chứng minh chứng chỉ để quá trình xét duyệt được nhanh chóng.
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Ảnh chân dung <span style="color: #ef4444;">*</span></label>
                    <div class="file-upload-area" onclick="document.getElementById('avatarFile').click()">
                        <i class="fas fa-camera"></i>
                        <p>Chọn ảnh chân dung</p>
                        <small>JPG, PNG (tối đa 5MB)</small>
                        <input type="file" id="avatarFile" name="AvatarFile" accept="image/*" style="display: none;" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Ảnh CCCD/CMND <span style="color: #ef4444;">*</span></label>
                    <div class="file-upload-area" onclick="document.getElementById('cccdFile').click()">
                        <i class="fas fa-id-card"></i>
                        <p>Chọn ảnh CCCD/CMND</p>
                        <small>JPG, PNG (tối đa 5MB)</small>
                        <input type="file" id="cccdFile" name="CccdFile" accept="image/*" style="display: none;" required>
                    </div>
                </div>

                <div class="form-group">
                    <label>Chứng chỉ thể hình (nếu có)</label>
                    <div class="file-upload-area" onclick="document.getElementById('certFile').click()">
                        <i class="fas fa-certificate"></i>
                        <p>Chọn file chứng chỉ</p>
                        <small>PDF, JPG, PNG (tối đa 10MB)</small>
                        <input type="file" id="certFile" name="CertFile" accept=".pdf,image/*" style="display: none;">
                    </div>
                </div>
            </div>
        </div>

        <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
            <a href="/" class="back-btn" style="text-decoration: none;">
                <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
            <button type="submit" class="submit-btn">
                <i class="fas fa-check-circle"></i> Gửi Đơn Đăng Ký
            </button>
        </div>
    </form>
</div>

<script src="~/js/pt/registerPT.js"></script>

